[user]
	name = ghostway
	email = ghostway@tuta.io
[alias]
	lola = log --graph --decorate --pretty=oneline --abbrev-commit --all

[core]
    pager = delta

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true
    line-numbers=true

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default
[init]
	defaultBranch = main
